{
	"publisher": "baincd",
	"name": "copy-path-unixstyle",
	"displayName": "Copy Path (Unix Style)",
	"description": "Copy Windows paths to clipboard in Unix/Linux/POSIX style",
	"version": "2.0.0-RC1",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/baincd/vscode-copy-path-unixstyle"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"Unix",
		"Linux",
		"POSIX",
		"gitbash",
		"wsl",
		"cygwin"
	],
	"activationEvents": [
		"onCommand:copy-path-unixstyle.copyPath",
		"onCommand:copy-path-unixstyle.copyRelativePath",
		"onCommand:copy-path-unixstyle.copyPathGitBashFormat",
		"onCommand:copy-path-unixstyle.copyPathWSLFormat",
		"onCommand:copy-path-unixstyle.copyPathCygwinFormat",
		"onCommand:copy-path-unixstyle.copyPathUniversalFormat"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"properties": {
					"copy-path-unixstyle.defaultFormat": {
						"type": "string",
						"enum": [
							"GitBash",
							"WSL",
							"Cygwin",
							"UniversalWindows"
						],
						"markdownEnumDescriptions": [
							"Git Bash format (ex: `/c/Users/baincd/file.txt`)",
							"WSL format (ex: `/mnt/c/Users/baincd/file.txt`)",
							"Cygwin format (ex: `/cygdrive/c/Users/baincd/file.txt`)",
							"Universal Windows format (ex: `C:/Users/baincd/file.txt`)"
						],
						"default": "GitBash",
						"markdownDescription": "The default format to use for 'Copy Path (Unix Style)' and 'Copy Relative Path (Unix Style)' commands"
					},
					"copy-path-unixstyle.copyPath.enable": {
						"type": "boolean",
						"default": true,
						"markdownDescription": "Enable 'Copy Path (Unix Style)' command"
					},
					"copy-path-unixstyle.copyPathGitBashFormat.enable": {
						"type": "boolean",
						"default": false,
						"markdownDescription": "Enable 'Copy Path (Unix Style - Git Bash format)' command"
					},
					"copy-path-unixstyle.copyPathWSLFormat.enable": {
						"type": "boolean",
						"default": false,
						"markdownDescription": "Enable 'Copy Path (Unix Style - WSL format)' command"
					},
					"copy-path-unixstyle.copyPathCygwinFormat.enable": {
						"type": "boolean",
						"default": false,
						"markdownDescription": "Enable 'Copy Path (Unix Style - Cygwin format)' command"
					},
					"copy-path-unixstyle.copyPathUniversalFormat.enable": {
						"type": "boolean",
						"default": false,
						"markdownDescription": "Enable 'Copy Path (Unix Style - Universal Windows format)' command"
					}
				}
			}
		],
		"commands": [
			{
				"command": "copy-path-unixstyle.copyPath",
				"title": "Copy Path (Unix Style)",
				"enablement": "config.copy-path-unixstyle.copyPath.enable"
			},
			{
				"command": "copy-path-unixstyle.copyPathGitBashFormat",
				"title": "Copy Path (Unix Style - Git Bash format)",
				"enablement": "config.copy-path-unixstyle.copyPathGitBashFormat.enable"
			},
			{
				"command": "copy-path-unixstyle.copyPathWSLFormat",
				"title": "Copy Path (Unix Style - WSL format)",
				"enablement": "config.copy-path-unixstyle.copyPathWSLFormat.enable"
			},
			{
				"command": "copy-path-unixstyle.copyPathCygwinFormat",
				"title": "Copy Path (Unix Style - Cygwin format)",
				"enablement": "config.copy-path-unixstyle.copyPathCygwinFormat.enable"
			},
			{
				"command": "copy-path-unixstyle.copyPathUniversalFormat",
				"title": "Copy Path (Unix Style - Universal Windows format)",
				"enablement": "config.copy-path-unixstyle.copyPathUniversalFormat.enable"
			},
			{
				"command": "copy-path-unixstyle.copyRelativePath",
				"title": "Copy Relative Path (Unix Style)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "copy-path-unixstyle.copyPath",
					"group": "6_copypath",
					"when": "config.copy-path-unixstyle.copyPath.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathGitBashFormat",
					"group": "6_copypath",
					"when": "config.copy-path-unixstyle.copyPathGitBashFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathWSLFormat",
					"group": "6_copypath",
					"when": "config.copy-path-unixstyle.copyPathWSLFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathCygwinFormat",
					"group": "6_copypath",
					"when": "config.copy-path-unixstyle.copyPathCygwinFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathUniversalFormat",
					"group": "6_copypath",
					"when": "config.copy-path-unixstyle.copyPathUniversalFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyRelativePath",
					"group": "6_copypath",
					"when": "isFileSystemResource"
				}
			],
			"editor/title/context": [
				{
					"command": "copy-path-unixstyle.copyPath",
					"group": "1_cutcopypaste",
					"when": "config.copy-path-unixstyle.copyPath.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathGitBashFormat",
					"group": "1_cutcopypaste",
					"when": "config.copy-path-unixstyle.copyPathGitBashFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathWSLFormat",
					"group": "1_cutcopypaste",
					"when": "config.copy-path-unixstyle.copyPathWSLFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathCygwinFormat",
					"group": "1_cutcopypaste",
					"when": "config.copy-path-unixstyle.copyPathCygwinFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyPathUniversalFormat",
					"group": "1_cutcopypaste",
					"when": "config.copy-path-unixstyle.copyPathUniversalFormat.enable && isFileSystemResource"
				},
				{
					"command": "copy-path-unixstyle.copyRelativePath",
					"group": "1_cutcopypaste",
					"when": "isFileSystemResource"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.30.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"typescript": "^4.1.3"
	}
}
